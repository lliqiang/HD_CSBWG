<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/listtem_bg"
   >
<ImageView
    android:id="@+id/img_dialog"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginLeft="30dp"
    android:layout_centerVertical="true"
    android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/name_dialog"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="23sp"
        android:textColor="#DAA25C"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/img_dialog"
        android:textStyle="bold|italic"
        android:text="蜻蜓眼琉璃珠"

        android:marqueeRepeatLimit="marquee_forever"
        android:ellipsize="marquee"
        android:scrollHorizontally="true"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:singleLine="true"

        />
    <ImageView
        android:id="@+id/back_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="30dp"
        android:src="@drawable/back_list"/>
</RelativeLayout>