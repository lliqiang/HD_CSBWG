<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    android:orientation="vertical"
    android:gravity="bottom"
    tools:context="com.hengda.smart.changsha.d.ui.TemporaryPlay">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:src="@mipmap/img_voice"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="bottom|center_vertical"
        android:gravity="bottom"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/temp_back_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@drawable/back" />


        <ImageView
            android:id="@+id/temp_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/back_play"
            android:src="@drawable/play_icon" />
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <SeekBar
                android:id="@+id/temp_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:indeterminate="false"
                android:progressDrawable="@drawable/seek_bar_progress_drawable"
                android:thumb="@drawable/flow_play" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/temp_startime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:text="00:00"
                    android:textColor="#ffb95f" />

                <TextView
                    android:id="@+id/temp_totaltime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginLeft="206dp"
                    android:text="3:00"
                    android:textColor="#ffb95f" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
